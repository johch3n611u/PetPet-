@model IEnumerable<PetPet.Models.News>

@{
    ViewBag.Title = "最新消息";
}

<br />
<h2>最新消息</h2>

<div class="row">
    <div class="container NEWrounded-top mt-4" style=" background-color:white;">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.N_tital)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.N_content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.N_photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.N_post_time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.N_post_deadline)
                </th>
            </tr>
            @{
                var EndDay = Model.Where(m => m.N_post_deadline >= DateTime.Now).ToList();

                foreach (var item in EndDay)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.N_tital)
                            </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.N_content)
                        </td>
                        <td>
                            @{
                                if (@item.N_photo != "")
                                {
                                    <img src="~/NewsImages/@item.N_photo" style="width:350px;" />
                                }

                             }                         

                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.N_post_time)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.N_post_deadline)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>