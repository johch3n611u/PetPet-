            break;
        case "PETVARIETY":
            Layout = "~/Views/Shared/_CMSLayout.cshtml";
            break;
        case "HOME":
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        case "MEMBER":
            Layout = "~/Views/Shared/_MEMLayout.cshtml";
            break;
        case "FRIEND":
            Layout = "~/Views/Shared/_MEMLayout.cshtml";
            break;
        case "MAIL":
            Layout = "~/Views/Shared/_MEMLayout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}   